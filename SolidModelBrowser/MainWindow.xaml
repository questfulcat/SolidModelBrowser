                        </Button>

                    </WrapPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Top">
                        <Button x:Name="ButtonChangeTheme" Width="30" Height="30">
