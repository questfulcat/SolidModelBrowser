                        </ToggleButton>
                        <Rectangle Width="2" Fill="{DynamicResource Separator}" />
                        <ToggleButton x:Name="ButtonAxes" ToolTip="Show XYZ axes lines [O]&#x0d;&#x0a;X-red, Y-green, Z-blue" Width="30" Height="30">
